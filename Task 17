namespace IJunior_Task17
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();

            int minRandomNumber = 0;
            int maxRandomNumber = 28;
            int minSearchBoundary = 100;
            int maxSearchBoundary = 1000;
            int searchNumbers;
            int numderRandom;
            int countSearchNumbers = 0;

            numderRandom = random.Next(minRandomNumber, maxRandomNumber);
            Console.WriteLine($"Случайное число {numderRandom}");

            for (int i = minSearchBoundary; i < maxSearchBoundary; i++)
            {
                searchNumbers = i;
                while (searchNumbers-- > 0)
                {
                    searchNumbers = searchNumbers - numderRandom;

                    if (searchNumbers == 0)
                    {
                        countSearchNumbers++;
                    }
                }
            }
            Console.WriteLine($"\nКоличество трехзначных натуральных чисел, которые кратны {numderRandom}: {countSearchNumbers} чисел.");
        }
    }
}
